<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".screens.SettingsFragment">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/mailTextBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/prestamoTextBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="numero de cuenta de prestamo "/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/creditoTextBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="numero de cuenta de credito "/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ahorrosTextBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="numero de cuenta de ahorros "/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/numeroTextBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="numero telefonico"/>

                    <Button
                            android:id="@+id/add_image_preview_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:text="@string/button_set_image"

                            android:layout_gravity="center_horizontal"/>
                    <ImageView
                            android:id="@+id/image_preview"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_image_black_24dp"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"/>
                    <Button
                            android:id="@+id/save_settings_Button"
                            android:text="@string/button_set_settings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_gravity="center_horizontal"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </ScrollView>



</layout>
